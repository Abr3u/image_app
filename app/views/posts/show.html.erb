<%= image_tag (@post.avatar_url.to_s), :class => "big_image" %>
<br/>
<p>Description: <%= @post.description %></p>
<p>Author: <%= @post.user.email %></p>
<p>Likes: <%= @post.get_upvotes.size %></p>
<p>Dislikes: <%= @post.get_downvotes.size %></p>
<%= link_to "Like", like_post_path(@post), method: :get %>
<%= link_to "Dislike", dislike_post_path(@post), method: :get %>

<h4> <%= pluralize(@post.comments.count, "Comment") %> </h4>
	
	<% @comments.each do |comment| %>
			<p>From: <%= comment.user.email %></p>
			<p>--> <%= comment.content %></p>
	<% end %>
	
<%= render "comments/form" %>